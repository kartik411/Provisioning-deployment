pipeline {
  agent {
    label 'app-instance'
  }
  
  stages {
    stage('git Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Build Docker Image') {
      steps {
        sh 'aws ecr get-login-password --region us-east-1'
        sh 'docker login --username AWS --password $(aws ecr get-login-password --region us-east-1) https://647560355561.dkr.ecr.us-east-1.amazonaws.com'
        script {
          docker.withRegistry(
            '647560355561.dkr.ecr.us-east-1.amazonaws.com/node-app',
            'ecr:us-east-1:AWSauthToken')
             def myImage = docker.build('node-app')
             myImage.push('latest')
        }
      }  
    }
   
    stage('Deploy to app host') {
      steps {
        sh 'sudo docker run -itd -p 8080:8080 --name HelloWorld 647560355561.dkr.ecr.us-east-1.amazonaws.com/node-app:latest'
      }
    }
  }
}
