pipeline {
  agent {
    label 'app-instance'
  }
  
  stages {
    stage('git Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Build Docker Image') {
      steps {
        sh 'cd test-nodeapp-1-task && sudo docker build -t node-app .'
        sh 'aws ecr get-login-password --region us-east-1' 
        sh 'docker login -u AWS -p $(aws ecr get-login-password --region us-east-1) https://647560355561.dkr.ecr.us-east-1.amazonaws.com'
        sh 'sudo docker tag node-app:latest 647560355561.dkr.ecr.us-east-1.amazonaws.com/node-app:latest'
        withDockerRegistry(credentialsId: 'ecr:us-east-1:awsAuthToken', url: 'https://647560355561.dkr.ecr.us-east-1.amazonaws.com/node-app') {
          sh 'sudo docker push 647560355561.dkr.ecr.us-east-1.amazonaws.com/node-app:latest'
        }
      }  
    }
   
    stage('Deploy to app host') {
      steps {
        sh 'sudo docker run -itd -p 8080:8080 --name HelloWorld 647560355561.dkr.ecr.us-east-1.amazonaws.com/node-app:latest'
      }
    }
  }
}
